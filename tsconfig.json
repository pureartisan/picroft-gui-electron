{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true ,
    "esModuleInterop": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@electron/*": ["electron/app/*"]
    }
  }
}
